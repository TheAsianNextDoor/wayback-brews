{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "dom",
            "dom.iterable",
            "ESNext"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "pretty": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ]
}